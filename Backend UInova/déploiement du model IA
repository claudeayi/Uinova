FROM nvidia/cuda:12.1.1-runtime-ubuntu20.04
RUN apt-get update && apt-get install -y python3 python3-pip git
RUN pip3 install torch transformers vllm
RUN git clone https://huggingface.co/deepseek-ai/deepseek-coder-v2
WORKDIR /deepseek-coder-v2
CMD ["python3", "-m", "vllm.entrypoints.api_server", "--model", "deepseek-ai/deepseek-coder-v2"]
