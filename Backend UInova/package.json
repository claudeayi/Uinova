{
  "name": "uinova-backend",
  "version": "1.0.0",
  "description": "Backend de la plateforme nocode UInova",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17"
  },
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",

    "prepare": "prisma generate",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "studio": "prisma studio",
    "seed": "ts-node prisma/seed.ts",

    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier -w .",

    "test": "vitest run",
    "test:watch": "vitest",

    "swagger:print": "node -e \"import('./dist/utils/swagger.js').then(() => console.log('Swagger: /api-docs & /api-docs.json'))\"",

    "docker:build": "docker build -t uinova-backend .",
    "docker:run": "docker run --env-file .env -p 3000:3000 uinova-backend"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@prisma/client": "^5.9.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "html-minifier-terser": "^7.2.0",
    "jszip": "^3.10.1",
    "jsonwebtoken": "^9.0.2",
    "mime": "^4.0.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.11.0",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.13",
    "openai": "^4.56.0",
    "socket.io": "^4.7.5",
    "stripe": "^14.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mime": "^3.0.4",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.12.11",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "prisma": "^5.9.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^2.0.16",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
