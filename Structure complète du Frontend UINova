src/
├─ App.tsx                # Routing global
├─ main.tsx               # Entrée React
├─ index.css              # Styles globaux (Tailwind)
│
├─ layouts/
│  └─ Navbar.tsx          # Barre de navigation (desktop + mobile + dark mode)
│
├─ context/
│  └─ ProjectContext.tsx  # Gestion projet actif
│
├─ hooks/
│  ├─ useAuth.ts          # Hook auth (user, login, logout)
│  └─ useToast.ts         # Notifications
│
├─ services/
│  ├─ http.ts             # Axios configuré (baseURL, auth header)
│  ├─ auth.ts             # Login/Register/Me
│  ├─ projects.ts         # CRUD projets
│  ├─ marketplace.ts      # Marketplace (items, publish, purchase)
│  ├─ payments.ts         # Paiements
│  ├─ badges.ts           # Badges
│  ├─ notifications.ts    # Notifications
│  └─ upload.ts           # Uploads fichiers
│
├─ components/
│  ├─ base/Button.tsx
│  ├─ advanced/{Card.tsx, Carousel.tsx}
│  ├─ onboarding/OnboardingCoach.tsx
│  ├─ editor/{EditorWrapper.tsx, LivePreview.tsx}
│  └─ projects/ProjectSelector.tsx
│
├─ routes/
│  └─ ProtectedRoute.tsx  # Protection par rôle (admin/user)
│
├─ pages/
│  ├─ Dashboard.tsx
│  ├─ ProjectsPage.tsx
│  ├─ ProjectDetailPage.tsx
│  ├─ EditorPage.tsx
│  ├─ PreviewPage.tsx
│  ├─ MarketplacePage.tsx
│  ├─ TemplatePage.tsx
│  ├─ MarketplaceManager.tsx   # Admin Marketplace
│  ├─ PricingPage.tsx
│  ├─ PaymentPage.tsx
│  ├─ DeployPage.tsx
│  ├─ ReplayPage.tsx
│  ├─ ARPreviewPage.tsx
│  ├─ MonitoringPage.tsx
│  ├─ LoginPage.tsx
│  ├─ RegisterPage.tsx
│  └─ NotFound.tsx
